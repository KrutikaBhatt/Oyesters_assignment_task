<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/task/task"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">New Task</h2>
            <span >Use the below form to create a new Task</span>
        </div>

        <form action="/api/createTask" method="POST" id="add_task">
    <div class="new_user">
        <div class="form-group">
            <label for="name" >Employee</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="employee" value="" placeholder="Enter name">
        </div>
        <div class="form-group">
            <label for="name" >Subject</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="subject" value="" placeholder="Enter Subject">
        </div>
        <div class="form-group">
            <label for="name" >Description</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="description" value="" placeholder="Enter Description">
        </div>
        <div class="form-group">
            <label for="name" >Deadline</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="deadline" value="" placeholder="Enter deadine">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>